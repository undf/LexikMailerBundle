<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Lexik Mailer Administration{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter="?yui_css" output='css/lexik-mailer.css'
                '@LexikMailerBundle/Resources/public/css/bootstrap.min.css'
                '@LexikMailerBundle/Resources/public/css/bootstrap-responsive.min.css'
                '@LexikMailerBundle/Resources/public/css/mailer.css' %}
                <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="all" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
            <div class="container">
            <ul class="nav">
               <li><a href="{{ path('sonata_admin_dashboard') }}">Dashboard</a></li>
               <li><a href="{{ path('lexik_mailer.email_list') }}">Email List</a></li>
               <li><a href="{{ path('lexik_mailer.layout_list') }}">Layout List</a></li>
           </ul>
            </div>
            </div>
        </div>

        <div class="container">
            {% block content %}{% endblock %}
        </div>

        {% block javascripts %}
            {% javascripts filter="?yui_js" output='js/lexik-mailer.js'
                '@LexikMailerBundle/Resources/public/js/bootstrap.min.js'
                '@LexikMailerBundle/Resources/public/js/jquery-1.7.2.min.js' %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>



